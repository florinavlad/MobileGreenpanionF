<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapPrizesFragment">

    <ImageView
        android:id="@+id/img_MapPrizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/updesign1"
        android:scaleType="fitStart"
        android:contentDescription="@string/top_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spre CENTRELE de RECICLARE"
        android:textColor="@color/text_color1"
        android:textSize="20sp"
        android:paddingTop="230dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_MapPrizes"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_MapPrizes" />

    <EditText
        android:id="@+id/center_destination"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Centru de reciclare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_location" />

    <EditText
        android:id="@+id/user_location"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Locația mea"
        app:layout_constraintEnd_toEndOf="@+id/img_MapPrizes"
        app:layout_constraintStart_toStartOf="@+id/img_MapPrizes"
        app:layout_constraintTop_toBottomOf="@+id/title_map" />

    <Button
        android:id="@+id/direction_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigare spre destinație"
        android:textSize="17sp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="@+id/img_MapPrizes"
        app:layout_constraintStart_toStartOf="@+id/img_MapPrizes"
        app:layout_constraintTop_toBottomOf="@+id/center_destination" />

</androidx.constraintlayout.widget.ConstraintLayout>